---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: infrastructure-secrets
  namespace: flux-system
spec:
  decryption:
    provider: sops
    secretRef:
      name: sops-age
  interval: 1m0s
  path: ./infrastructure/{{ cluster_name }}/secrets
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
