  #       name: db-subnet-group
  #     spec:
  #       subnetIDs: []
  #   target:
  #     kind: DBSubnetGroup
  #     name: db-subnet-group
  #     namespace: postgres
---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: gateway-api-crds
  namespace: flux-system
spec:
  interval: 10m0s
  path: ./clusters/base
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
