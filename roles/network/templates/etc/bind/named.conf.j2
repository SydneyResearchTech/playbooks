acl rfc1918 { 10/8; 172.16/12; 192.168/24; };
acl ula { fc00::/7; };

options {
  directory "/var/cache/bind";
{% if network_dns64_forwarders %}
  forwarders { {{ network_dns64_forwarders | join('; ') }}; };
{% else %}
  include "/etc/bind/named.conf.forwarders";
{% endif %}
  forward only;
  dnssec-validation no;
  listen-on-v6 { ::1; {{ ipv6_address }}; };
  listen-on { 127.0.0.1; };
  allow-query { ::1; 127/8; ula; rfc1918; };
  dns64 {{ network_dns64_prefix }} {
    clients { any; };
    mapped { !rfc1918; any; };
    exclude { {{ network_dns64_prefix }}; any; };
    suffix ::;
  };
};

include "/etc/bind/named.conf.default-zones";
